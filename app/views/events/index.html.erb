<h1>Listing events</h1>

<%= link_to 'New Event', new_event_path %>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Location</th>
    <th>Start Date</th>
    <th>Start Time</th>
    <th>End Date</th>
    <th>End Time</th>
  </tr>

  <% @events.each do |event| %>
    <tr>
      <td><%= event.name %></td>

      <td><%= event.description %></td>

      <td><%= event.location %></td>

      <td><%= event.start_date %></td>

      <td><%= event.start_time %></td>

      <td><%= event.end_date %></td>

      <td><%= event.end_time %></td>
    </tr>
  <% end %>
</table>
